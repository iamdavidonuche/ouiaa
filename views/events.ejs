<%- include("partials/header.ejs", {title: "events"}) %>

    <main class="events-main">
      <div class="container">
        <!-- Header -->
        <div class="page-header">
          <div class="header-content">
            <i class="fas fa-calendar"></i>
            <h1>Alumni Events</h1>
          </div>
          <p>
            Discover upcoming events, reunions, and networking opportunities.
            Stay connected with your alumni community and advance your career.
          </p>
        </div>

        <!-- Filters -->
        <div class="events-filters">
          <div class="filter-header">
            <i class="fas fa-filter"></i>
            <h2>Filter Events</h2>
          </div>

          <div class="filter-form">
            <div class="filter-row">
              <div class="filter-group">
                <label>Category</label>
                <select id="categoryFilter" onchange="filterEvents()">
                  <option value="">All Categories</option>
                  <option value="professional">Professional Development</option>
                  <option value="career">Career Services</option>
                  <option value="reunion">Reunions</option>
                  <option value="networking">Networking</option>
                  <option value="social">Social Events</option>
                </select>
              </div>

              <div class="filter-group">
                <label>Event Type</label>
                <select id="typeFilter" onchange="filterEvents()">
                  <option value="">All Types</option>
                  <option value="in-person">In-Person</option>
                  <option value="virtual">Virtual</option>
                </select>
              </div>

              <div class="filter-group">
                <button class="btn-clear" onclick="clearEventFilters()">
                  Clear Filters
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Featured Events -->
        <div class="featured-events">
          <h2>Featured Events</h2>
          <div class="featured-grid">
            <div
              class="event-card featured"
              data-category="professional"
              data-type="in-person"
            >
              <div class="event-image">
                <img
                  src="https://images.pexels.com/photos/1181675/pexels-photo-1181675.jpeg?auto=compress&cs=tinysrgb&w=800"
                  alt="Alumni Tech Summit 2024"
                />
                <div class="featured-badge">Featured</div>
                <div class="category-badge professional">Professional</div>
              </div>

              <div class="event-content">
                <h3>Alumni Tech Summit 2024</h3>
                <p class="event-description">
                  Join fellow tech alumni for a day of networking, innovation
                  talks, and career development. Featuring keynotes from
                  industry leaders and hands-on workshops.
                </p>

                <div class="event-details">
                  <div class="detail-item">
                    <i class="fas fa-calendar"></i>
                    <span>Friday, March 15, 2024</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-clock"></i>
                    <span>9:00 AM - 5:00 PM</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Lagos, Nigeria</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-users"></i>
                    <span>250/300 registered</span>
                  </div>
                </div>

                <div class="event-footer">
                  <div class="event-price">Free</div>
                  <button class="btn-register">
                    Register Now
                    <i class="fas fa-arrow-right"></i>
                  </button>
                </div>
              </div>
            </div>

            <div
              class="event-card featured"
              data-category="networking"
              data-type="virtual"
            >
              <div class="event-image">
                <img
                  src="https://images.pexels.com/photos/3184360/pexels-photo-3184360.jpeg?auto=compress&cs=tinysrgb&w=800"
                  alt="Alumni Mentorship Program Launch"
                />
                <div class="featured-badge">Featured</div>
                <div class="category-badge networking">Networking</div>
              </div>

              <div class="event-content">
                <h3>Alumni Mentorship Program Launch</h3>
                <p class="event-description">
                  Launch of our new mentorship program. Learn how to become a
                  mentor or find a mentor in your field. Includes speed
                  networking sessions.
                </p>

                <div class="event-details">
                  <div class="detail-item">
                    <i class="fas fa-calendar"></i>
                    <span>Thursday, April 18, 2024</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-clock"></i>
                    <span>7:00 PM - 9:00 PM</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Online</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-users"></i>
                    <span>120/200 registered</span>
                  </div>
                </div>

                <div class="event-footer">
                  <div class="event-price">Free</div>
                  <button class="btn-register">
                    Register Now
                    <i class="fas fa-arrow-right"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- All Events -->
        <div class="all-events">
          <h2>All Events</h2>
          <div class="events-grid" id="eventsGrid">
            <div class="event-card" data-category="career" data-type="virtual">
              <div class="event-image">
                <img
                  src="https://images.pexels.com/photos/3184298/pexels-photo-3184298.jpeg?auto=compress&cs=tinysrgb&w=800"
                  alt="Virtual Career Fair"
                />
                <div class="category-badge career">Career</div>
              </div>

              <div class="event-content">
                <h3>Virtual Career Fair</h3>
                <p class="event-description">
                  Connect with top employers actively recruiting alumni.
                  One-on-one meetings, company presentations, and resume reviews
                  available.
                </p>

                <div class="event-details">
                  <div class="detail-item">
                    <i class="fas fa-calendar"></i>
                    <span>Friday, March 22, 2024</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Online</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-users"></i>
                    <span>450/500 registered</span>
                  </div>
                </div>

                <div class="event-footer">
                  <div class="event-price">Free</div>
                  <button class="btn-register">Register</button>
                </div>
              </div>
            </div>

            <div
              class="event-card"
              data-category="reunion"
              data-type="in-person"
            >
              <div class="event-image">
                <img
                  src="https://images.pexels.com/photos/1395967/pexels-photo-1395967.jpeg?auto=compress&cs=tinysrgb&w=800"
                  alt="Class of 2019 Reunion"
                />
                <div class="category-badge reunion">Reunion</div>
              </div>

              <div class="event-content">
                <h3>Class of 2019 Reunion</h3>
                <p class="event-description">
                  Celebrate 5 years since graduation! Campus tours, dinner, and
                  dancing. Reconnect with classmates and reminisce about your
                  college days.
                </p>

                <div class="event-details">
                  <div class="detail-item">
                    <i class="fas fa-calendar"></i>
                    <span>Saturday, April 5, 2024</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>University Campus</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-users"></i>
                    <span>85/150 registered</span>
                  </div>
                </div>

                <div class="event-footer">
                  <div class="event-price">â‚¦15,000</div>
                  <button class="btn-register">Register</button>
                </div>
              </div>
            </div>

            <div
              class="event-card"
              data-category="professional"
              data-type="in-person"
            >
              <div class="event-image">
                <img
                  src="https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&cs=tinysrgb&w=800"
                  alt="Entrepreneurship Workshop"
                />
                <div class="category-badge professional">Professional</div>
              </div>

              <div class="event-content">
                <h3>Entrepreneurship Workshop</h3>
                <p class="event-description">
                  Learn from successful alumni entrepreneurs. Pitch practice,
                  funding strategies, and networking with potential co-founders
                  and investors.
                </p>

                <div class="event-details">
                  <div class="detail-item">
                    <i class="fas fa-calendar"></i>
                    <span>Friday, April 12, 2024</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Abuja, Nigeria</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-users"></i>
                    <span>45/60 registered</span>
                  </div>
                </div>

                <div class="event-footer">
                  <div class="event-price">â‚¦5,000</div>
                  <button class="btn-register">Register</button>
                </div>
              </div>
            </div>

            <div
              class="event-card"
              data-category="social"
              data-type="in-person"
            >
              <div class="event-image">
                <img
                  src="https://images.pexels.com/photos/1587927/pexels-photo-1587927.jpeg?auto=compress&cs=tinysrgb&w=800"
                  alt="Annual Gala Dinner"
                />
                <div class="category-badge social">Social</div>
              </div>

              <div class="event-content">
                <h3>Annual Gala Dinner</h3>
                <p class="event-description">
                  Our signature annual event featuring awards ceremony, gourmet
                  dinner, and live entertainment. Celebrate outstanding alumni
                  achievements.
                </p>

                <div class="event-details">
                  <div class="detail-item">
                    <i class="fas fa-calendar"></i>
                    <span>Friday, May 10, 2024</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Lagos, Nigeria</span>
                  </div>
                  <div class="detail-item">
                    <i class="fas fa-users"></i>
                    <span>180/250 registered</span>
                  </div>
                </div>

                <div class="event-footer">
                  <div class="event-price">â‚¦30,000</div>
                  <button class="btn-register">Register</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="no-events" id="noEvents" style="display: none">
          <i class="fas fa-calendar"></i>
          <h3>No events found</h3>
          <p>Try adjusting your filters to see more events</p>
        </div>

        <!-- CTA Section -->
        <div class="events-cta">
          <div class="cta-content">
            <h2>Don't Miss Out!</h2>
            <p>
              Stay updated on the latest alumni events and networking
              opportunities. Subscribe to our newsletter for exclusive
              invitations and early registration access.
            </p>
            <button class="btn-cta">Subscribe to Updates</button>
          </div>
        </div>
      </div>
    </main>

    <%- include("partials/footer.ejs") %>

    <script src="js/script.js"></script>
  </body>
</html>

