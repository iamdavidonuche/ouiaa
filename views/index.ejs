<%- include("partials/header.ejs", {title: "home"}) %>

    <main>
      <!-- Hero Section -->
      <section class="hero">
        <div class="container">
          <div class="hero-content">
            <h1 class="hero-title">
              Welcome to Your
              <span class="hero-subtitle"
                >Oduduwa University Alumni Community</span
              >
            </h1>
            <p class="hero-description">
              Connect with fellow graduates, access academic services, and stay
              engaged with your alma mater through our comprehensive alumni
              platform.
            </p>
            <div class="hero-buttons">
              <a href="/register" class="btn-hero-primary">
                Join Our Community
                <i class="fas fa-arrow-right"></i>
              </a>
              <a href="/login" class="btn-hero-secondary">Sign In</a>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="features">
        <div class="container">
          <div class="section-header">
            <h2>Everything You Need</h2>
            <p>
              Our platform provides comprehensive services to keep you connected
              and support your continued success.
            </p>
          </div>

          <div class="features-grid">
            <a href="/directory" class="feature-card">
              <div class="feature-icon">
                <i class="fas fa-users"></i>
              </div>
              <h3>Alumni Directory</h3>
              <p>
                Connect with fellow graduates and expand your professional
                network worldwide.
              </p>
              <div class="feature-link">
                Learn more <i class="fas fa-arrow-right"></i>
              </div>
            </a>

            <a href="/transcript" class="feature-card">
              <div class="feature-icon">
                <i class="fas fa-file-text"></i>
              </div>
              <h3>Transcript Requests</h3>
              <p>
                Request official transcripts quickly and securely with online
                tracking.
              </p>
              <div class="feature-link">
                Learn more <i class="fas fa-arrow-right"></i>
              </div>
            </a>

            <a href="/events" class="feature-card">
              <div class="feature-icon">
                <i class="fas fa-calendar"></i>
              </div>
              <h3>Events & Reunions</h3>
              <p>
                Stay updated on alumni events, reunions, and networking
                opportunities.
              </p>
              <div class="feature-link">
                Learn more <i class="fas fa-arrow-right"></i>
              </div>
            </a>

            <a href="/dashboard" class="feature-card">
              <div class="feature-icon">
                <i class="fas fa-award"></i>
              </div>
              <h3>Career Services</h3>
              <p>
                Access career resources, job boards, and professional
                development tools.
              </p>
              <div class="feature-link">
                Learn more <i class="fas fa-arrow-right"></i>
              </div>
            </a>
          </div>
        </div>
      </section>

      <!-- Statistics Section -->
      <section class="statistics">
        <div class="container">
          <div class="stats-grid">
            <div class="stat-card">
              <div class="stat-number">15,000+</div>
              <div class="stat-label">Active Alumni</div>
            </div>
            <div class="stat-card">
              <div class="stat-number">50+</div>
              <div class="stat-label">Countries Represented</div>
            </div>
            <div class="stat-card">
              <div class="stat-number">200+</div>
              <div class="stat-label">Annual Events</div>
            </div>
            <div class="stat-card">
              <div class="stat-number">95%</div>
              <div class="stat-label">Satisfaction Rate</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Testimonials Section -->
      <section class="testimonials">
        <div class="container">
          <div class="section-header">
            <h2>Success Stories</h2>
            <p>
              Hear from alumni who have benefited from our community and
              services.
            </p>
          </div>

          <div class="testimonials-grid">
            <div class="testimonial-card">
              <div class="stars">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
              <p class="testimonial-text">
                "The alumni portal helped me connect with mentors who guided my
                career transition into tech leadership."
              </p>
              <div class="testimonial-author">
                <div class="author-name">Adebayo Johnson</div>
                <div class="author-details">Class of 2018</div>
                <div class="author-major">Computer Science</div>
              </div>
            </div>

            <div class="testimonial-card">
              <div class="stars">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
              <p class="testimonial-text">
                "Through the alumni network, I found my co-founder and launched
                a successful startup."
              </p>
              <div class="testimonial-author">
                <div class="author-name">Funmi Adeyemi</div>
                <div class="author-details">Class of 2015</div>
                <div class="author-major">Business Administration</div>
              </div>
            </div>

            <div class="testimonial-card">
              <div class="stars">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
              <p class="testimonial-text">
                "The transcript service was incredibly efficient when I applied
                for graduate school."
              </p>
              <div class="testimonial-author">
                <div class="author-name">Kemi Ogundimu</div>
                <div class="author-details">Class of 2020</div>
                <div class="author-major">Environmental Science</div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="cta">
        <div class="container">
          <div class="cta-content">
            <h2>Ready to Reconnect?</h2>
            <p>
              Join thousands of alumni who are already part of our thriving
              community.
            </p>
            <a href="/register" class="btn-cta">
              Get Started Today
              <i class="fas fa-arrow-right"></i>
            </a>
          </div>
        </div>
      </section>
    </main>

    <%- include("partials/footer.ejs") %>

    <script src="js/script.js"></script>
  </body>
</html>
